<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#2E4EFF"
        android:text="T-News"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Get Latest Updates !"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <ImageView
            android:background="#E6E6E6"
            android:layout_marginTop="40dp"
            android:id="@+id/cnn"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/cnn" />

            <ImageView
                android:background="#E6E6E6"
            android:layout_marginTop="40dp"
            android:id="@+id/bbc"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/bbc" />

            <ImageView
                android:background="#E6E6E6"
            android:layout_marginTop="40dp"
            android:id="@+id/aajtak"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/aajtak" />

            <ImageView
                android:background="#E6E6E6"
            android:layout_marginTop="40dp"
            android:id="@+id/abp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/abp" />

            <ImageView
                android:background="#E6E6E6"
            android:layout_marginTop="40dp"
            android:id="@+id/ndtv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/ndtv" />

            <ImageView
                android:background="#E6E6E6"
            android:layout_marginTop="40dp"
            android:id="@+id/newsindia18"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/newsindia18" />

            <ImageView
                android:background="#E6E6E6"
            android:layout_marginTop="40dp"
            android:id="@+id/zeenews"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/zeenews" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>